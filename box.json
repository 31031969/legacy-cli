{
  "chmod": "0755",
  "directories": [
    "resources",
    "src"
  ],
  "files": [
    "constants.php",
    "shell-config.rc",
    "vendor/autoload.php",
    "vendor/symfony/console/Resources/bin/hiddeninput.exe"
  ],
  "finder": [
    {
      "in": "bin",
      "name": "*"
    },
    {
      "in": "vendor",
      "name": "*.php",
      "exclude": [
        "phpunit",
        "Tests",
        "tests"
      ]
    }
  ],
  "main": "bin/platform",
  "output": "platform.phar",
  "stub": true
}
